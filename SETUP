#/usr/bin/env bash

# KALI SETUP SCRIPT
#  
# - Setup non-root uxer
# - Install core system updates
# - Setup dev

function run! {
	update_system
	install_libs
	create_user
	setup_bash
	setup_vim
	setup_keymaps
	change_hostname
	setup_gitconfig
	setup_crontab
	setup_storage
	package_dotfiles
}

function setup_temp_git {
	git config --global git.email "Trailer@bob.com"
	git config --global git.name "Trailer Bob"
}

function setup_ssh {
	cd ~
	dialog("Generating keypairs, You'll need to enter your password.")
	ssh-keygen
}


function clean {
	rm -rf /root/.ssh
	rm /root/.gitconfig
	rm /root/.bashrc && touch /root/.bashrc
	rm /root/.bash_profile && touch /root/.bash_profile
	rm /root/.vimrc
		
}






